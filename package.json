{
  "name": "@adobe/helix-perf",
  "version": "1.0.1",
  "description": "Helix Performance",
  "main": "index.js",
  "scripts": {
    "test": "nyc mocha -i -g Post-Deployment --exit",
    "test-ci": "npm run lint && nyc --reporter=text --reporter=lcov --check-coverage --branches 90 --statements 90 --lines 90 mocha --reporter xunit --reporter-options output=./junit/test-results.xml -i -g Post-Deployment  --exit && codecov",
    "test-postdeploy": "mocha --reporter xunit --reporter-options output=./junit/test-results.xml -g Post-Deployment  --exit",
    "semantic-release": "semantic-release",
    "semantic-prepare": "node ./build/prepare.js",
    "lint": "./node_modules/.bin/eslint .",
    "build": "wsk-builder -v --entryFile index.js",
    "deploy": "wsk-builder -v --deploy --test --entryFile index.js -p EPSAGON_TOKEN=$EPSAGON_TOKEN"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-perf"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-perf/issues"
  },
  "homepage": "https://github.com/adobe/helix-perf#readme",
  "dependencies": {
    "@adobe/fastly-native-promises": "^1.10.0",
    "@adobe/helix-pingdom-status": "^1.4.2",
    "@adobe/openwhisk-action-builder": "^1.1.1",
    "calibre": "^2.2.1",
    "epsagon": "^1.29.0",
    "snyk": "^1.192.6",
    "uri-js": "^4.2.2"
  },
  "devDependencies": {
    "@adobe/helix-shared": "^1.5.1",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.2.0",
    "@semantic-release/exec": "^3.3.5",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "@semantic-release/release-notes-generator": "^7.2.1",
    "ajv": "^6.10.1",
    "codecov": "^3.5.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-header": "^2.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "istanbul": "^1.1.0-alpha.1",
    "junit-report-builder": "^1.3.2",
    "mocha": "^6.1.4",
    "mocha-junit-reporter": "^1.23.0",
    "mocha-parallel-tests": "^2.2.1",
    "nyc": "^14.1.1",
    "proxyquire": "^2.1.0",
    "semantic-release": "^15.13.18",
    "sinon": "^7.3.2"
  },
  "snyk": true,
  "wsk": {
    "name": "helix-services/perf@1.0.1"
  }
