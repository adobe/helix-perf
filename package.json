{
  "name": "@adobe/helix-perf",
  "version": "0.0.1",
  "description": "Helix Performance",
  "main": "index.js",
  "scripts": {
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 100 --statements 100 --lines 100 mocha --exit",
    "lint": "./node_modules/.bin/eslint .",
    "junit": "mocha --exit -R mocha-junit-reporter",
    "preversion": "npm run junit",
    "postversion": "git push origin master --follow-tags",
    "zip": "npm ls --prod --parseable | grep node_modules | sed -e 's/.*node_modules/node_modules/' | xargs zip perf.zip -x \"node_modules/calibre/bin/*\" -r src package.json index.js",
    "deploy": "npm run zip && wsk action update perf perf.zip --kind nodejs:10 --web true --web-secure false --timeout 300000 -p CALIBRE_AUTH \"$CALIBRE_AUTH\"",
    "test-deploy": "npm run zip && wsk action update perf-test perf.zip --kind nodejs:10 --web true --web-secure false --timeout 300000 -p CALIBRE_AUTH \"$CALIBRE_AUTH\"",
    "delete-git-tag": "git tag -d v$npm_package_version && git push origin :v$npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe-rnd/new-nodejs-repository-template"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe-rnd/new-nodejs-repository-template/issues"
  },
  "homepage": "https://github.com/adobe-rnd/new-nodejs-repository-template#readme",
  "dependencies": {
    "@adobe/fastly-native-promises": "^1.8.1",
    "calibre": "^1.2.3",
    "uri-js": "^4.2.2"
  },
  "devDependencies": {
    "ajv": "^6.5.3",
    "codecov": "^3.0.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-header": "^2.0.0",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "istanbul": "^1.1.0-alpha.1",
    "junit-report-builder": "^1.3.1",
    "mocha": "^6.0.0",
    "mocha-junit-reporter": "^1.17.0",
    "mocha-parallel-tests": "^2.0.3",
    "nyc": "^14.0.0",
    "proxyquire": "^2.1.0",
    "sinon": "^7.2.2"
  },
  "snyk": true
}
